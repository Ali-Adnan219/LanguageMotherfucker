{
    "bail": true,
    "expand": true,
    "verbose": true,
    "rootDir": "./",
    "useStderr": true,
    "forceExit": true,
    "logHeapUsage": true,
    "collectCoverage": true,
    "name": "englishmotherfucker",
    "testURL": "http://localhost/",
    "coverageDirectory": "./coverage",
    "testRegex": "(./ci/tests/.*| (\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
        "main": "<rootDir>/src/main.ts"
    },
    "coveragePathIgnorePatterns": [
        "./node_modules/",
        "./dist/"
    ],
    "coverageReporters": [
        "json",
        "lcov",
        "text"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "globals": {
        "ts-jest": {
            "diagnostics": true
        }
    }
}
