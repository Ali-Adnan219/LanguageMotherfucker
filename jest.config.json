{
    "bail": true,
    "expand": true,
    "verbose": true,
    "rootDir": "./",
    "useStderr": true,
    "forceExit": true,
    "logHeapUsage": true,
    "collectCoverage": true,
    "name": "englishmotherfucker",
    "testURL": "http://localhost/",
    "coverageDirectory": "./coverage",
    "testRegex": "(./ci/tests/.*| (\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
        "main": "<rootDir>/src/main.ts",
        "menuExtra": "<rootDir>/src/lib/Telegraf/Extra/menu.ts",
        "botTypings": "<rootDir>/src/lib/Telegraf/botTypings.d.ts",
        "telegrafRedis": "<rootDir>/src/lib/Telegraf/Utils/redis.ts",
        "menuKeyboard": "<rootDir>/src/lib/Telegraf/Keyboard/menu.ts"
    },
    "coveragePathIgnorePatterns": [
        "./node_modules/",
        "./dist/"
    ],
    "coverageReporters": [
        "json",
        "lcov",
        "text"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "globals": {
        "ts-jest": {
            "diagnostics": true
        }
    }
}
